{
	"compilerOptions": {
			"module": "commonjs",
			"esModuleInterop": true,
			"allowSyntheticDefaultImports": true,
      "allowJs": false,
			"target": "es2015",
			"moduleResolution": "node",
      "removeComments": false,
      "noImplicitAny": true,
      "sourceMap": true,
      "lib": ["dom", "es2016"],
			"baseUrl": ".",
			"outDir": "./dist",
			"paths": {
					"*": [
							"node_modules/*",
							"src/types/*"
					]
			},
      "declaration": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/sw-runtime.ts"
  ]
}
